@page
@model Template.Web.Areas.BasicUser.Features.CheckInOut.CheckInOutModel

<h2>Registro Visitatori</h2>

<form method="post">
    <label>Nome Completo:</label>
    <input asp-for="Form.FullName" required /><br />

    <label>Email:</label>
    <input asp-for="Form.Email" type="email" required /><br />

    <label>Motivo Visita:</label>
    <input asp-for="Form.Reason" required /><br />

    <button type="submit">Invia</button>
</form>

@if (Model.IsCheckOut)
{
    <p>Grazie per la visita! Il tuo checkout è stato registrato.</p>
}
else if (Model.IsCheckIn)
{
    <p>Benvenuto! Il tuo check-in è stato registrato.</p>
}

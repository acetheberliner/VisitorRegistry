@page
@model Template.Web.Areas.BasicUser.Features.CheckInOut.CheckInOutModel
@{
    Layout = null; // full screen
}

<h2>Benvenuto!</h2>
<form method="post">
    <input asp-for="FullName" placeholder="Nome completo" required />
    <input asp-for="Email" placeholder="Email" required />
    <input asp-for="Reason" placeholder="Motivo visita" required />
    <button type="submit">Entra/Esci</button>
</form>

@if (Model.Message != null)
{
    <p>@Model.Message</p>
}
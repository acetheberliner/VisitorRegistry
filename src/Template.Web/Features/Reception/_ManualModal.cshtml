<!-- Modal per inserimento/modifica manuale visitatore -->
<div class="modal fade mt-12" id="manualModal" tabindex="-1" aria-labelledby="manualModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="manualForm">
        <div class="modal-header pb-0">
        <div class="flex-col">
          <h5 class="modal-title" id="manualModalLabel">Aggiungi visitatore</h5>
          <p class="text-muted">Solo la reception pu√≤ effettuare questa operazione</p>
        </div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Chiudi"></button>
        </div>
        <div class="modal-body pb-0">
          <input type="hidden" id="manualEditingId" value="" />
          <div class="mb-3">
            <label class="form-label">Nome</label>
            <input id="manualFirstName" class="form-control" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Cognome</label>
            <input id="manualLastName" class="form-control" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input id="manualEmail" type="email" class="form-control" required />
          </div>
          <div class="mb-3">
            <label class="form-label">QR ingresso <i>(opzionale)</i></label>
            <input id="manualQr" class="form-control fst-italic" placeholder="es. main-entrance" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" id="manualCancel" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annulla</button>
          <button type="submit" id="manualSubmit" class="btn btn-primary">Inserisci</button>
        </div>
      </form>
    </div>
  </div>
</div>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Reception";
}
<link rel="stylesheet" href="@Url.Content("/css/reception.css")" />
<div class="container-fluid py-4">
    <div class="d-flex align-items-start gap-5 mb-3">
        <div>
            <h1 class="h3 mb-1">Reception Live</h1>
            <p class="text-muted mb-0">Monitoraggio check-in/check-out in tempo reale con SignalR</p>
        </div>
    </div>

    <div class="row gx-4">
        <!-- Main column -->
        <div class="col-lg-9">
            <!-- Stats -->
            <div class="row mb-3 g-3">
                <div class="col-sm-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <small class="text-muted">Presenti ora</small>
                                    <div id="presentNow" class="h4 mb-0">0</div>
                                </div>
                                <div class="text-success fs-3"><i class="fas fa-user-check"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <small class="text-muted">Ultimo check‑in</small>
                            <div id="lastCheckin" class="h6 mb-0">-</div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <small class="text-muted">Totale registrati</small>
                            <div id="totalRecords" class="h6 mb-0">0</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <div class="row gy-2 gx-2 align-items-center">
                        <div class="col-md-5">
                            <input id="filterSearch" class="form-control" placeholder="Ricerca per email, nome, cognome, ID" />
                        </div>
                        <div class="col-auto">
                            <input id="filterStart" type="date" class="form-control" />
                        </div>
                        <div class="col-auto d-flex align-items-center">
                            <input id="filterPresent" class="form-check-input mx-1 mt-0" type="checkbox" />
                            <label class="form-check-label mb-0">Solo presenti</label>
                        </div>
                        <div class="col-auto">
                            <button id="applyFilters" class="btn btn-outline-primary btn-sm mx-2">Applica</button>
                            <button id="clearFilters" class="btn btn-outline-danger btn-sm">Cancella filtri</button>
                        </div>
                        <div class="col text-end">
                            <button id="exportBtn" class="btn btn-success btn-sm">Esporta</button>
                        </div>
                    </div>

                    <!-- Error banner: mostrato se il client non riesce a caricare le visite -->
                    <div id="receptionError" class="alert alert-warning mt-3 mb-0 d-none" role="alert" style="font-size:0.95rem;">
                        Impossibile caricare le visite — controlla la console o il server.
                    </div>
                </div>
            </div>

            <!-- Table -->
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table id="visits" class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>ID check-in</th>
                                    <th>Email</th>
                                    <th>Nome</th>
                                    <th>Cognome</th>
                                    <th>Entrata</th>
                                    <th>Uscita</th>
                                    <th style="width:120px;">Stato</th>
                                </tr>
                            </thead>
                            <tbody><!-- Inserimento entry tramite js --></tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer text-muted small">
                    <span id="visitCount">Visitatori attualmente presenti: 0</span>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-3">
            <div class="card shadow-sm mb-3 mt-3 mt-md-0">
                <div class="card-body">
                    <h6 class="card-title text-center pb-3">Dettaglio visitatore</h6>
                    <div id="detailEmpty" class="text-muted">Seleziona una riga per vedere i dettagli</div>
                    <div id="detailPane" class="d-none">
                        <div class="mb-2"><strong id="detailName">-</strong></div>
                        <div class="mb-1"><small class="text-muted">Email</small><div id="detailEmail">-</div></div>
                        <div class="mb-1"><small class="text-muted">ID check-in</small><div id="idcheck">-</div></div>
                        <div class="mb-1"><small class="text-muted">QR</small><div id="detailQr">-</div></div>
                        <div class="mb-1"><small class="text-muted">Durata</small><div id="detailDuration">-</div></div>
                        <div class="mb-1"><small class="text-muted">Entrata</small><div id="detailIn">-</div></div>
                        <div class="mb-1"><small class="text-muted">Uscita</small><div id="detailOut">-</div></div>
                        <div class="mt-3 d-flex gap-2">
                            <button id="detailCheckoutBtn" class="btn btn-warning btn-sm">Check-out</button>
                            <button id="detailEditBtn" class="btn btn-outline-primary btn-sm">Modifica</button>
                            <button id="detailDeleteBtn" class="btn btn-outline-danger btn-sm">Elimina</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-title">Azioni rapide</h6>
                    <button id="addManualBtn" class="btn btn-primary btn-sm w-100 mb-2">Aggiungi manualmente</button>
                    <button id="exportBtn2" class="btn btn-success btn-sm w-100 mb-2">Esporta</button>
                    <a href="http://192.168.178.131:5178/qr/preview" target="_blank" rel="noopener" role="button" class="btn btn-warning btn-sm w-100 text-decoration-none">Archivio QR</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal per inserimento/modifica manuale visitatore -->
@await Html.PartialAsync("_ManualModal")

@section scripts {
    <script>
        window.APP_BASE = '@Url.Content("~/")';
    </script>

    <!-- SignalR CDN -->
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@8.0.0/dist/browser/signalr.min.js"></script>

    <!-- file js per la logica reception -->
    <script type="module" src="@Url.Content("~/js/reception/main.js")"></script>
}
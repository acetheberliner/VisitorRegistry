@model Template.Web.Features.Visitor.VisitorFormModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Check-in";
}
<link rel="stylesheet" href="@Url.Content("/css/visitor.css")" />


<div class="container-fluid form-data pb-4">
    <div class="d-flex align-items-start gap-3 mb-3">
        <div>
            <h2 class="h3 mb-1 fw-">Check-in</h2>
            <div class="text-muted small">Compila il form con i dati richiesti e conferma l'ingresso.</div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 visitor-card">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post" id="visitorForm">
                        <input type="hidden" asp-for="QrKey" />
                        <div class="mb-3 text-center">
                            @if (!string.IsNullOrEmpty(Model?.QrKey)) {
                                <div class="qr-key-badge text-capitalize">@Model.QrKey</div>
                            } else {
                                <div class="muted-small mb-2">QR non rilevato</div>
                            }
                        </div>

                        <h3 class="h5 mb-3 fw-semibold">Dati visitatore</h3>

                        <div class="mb-3">
                            <label class="form-label">Nome</label>
                            <input asp-for="FirstName" class="form-control" required />
                            <div class="invalid-feedback" id="err-firstName">Il nome è obbligatorio.</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Cognome</label>
                            <input asp-for="LastName" class="form-control" required />
                            <div class="invalid-feedback" id="err-lastName">Il cognome è obbligatorio.</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" required />
                        </div>

                        <div class="d-flex gap-2 mt-3">
                            <button type="submit" class="btn btn-onit flex-grow-1 btn-lg">Entra</button>
                            <a href="@Url.Content("~/qr/preview")" class="btn btn-outline-secondary btn-sm" style="border-radius:10px; padding:.75rem .75rem;">Indietro</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="text-muted small mt-3 text-center pt-3">
            <p>Informativa sulla privacy<br/>I dati saranno trattati e salvati nel sistema</p>
        </div>
    </div>
</div>

@section scripts {
	<script>
		window.APP_BASE = window.APP_BASE || '@Url.Content("~/")';
	</script>

	<script src="@Url.Content("~/js/visitor.js")"></script>
}
